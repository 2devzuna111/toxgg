{
  "manifest_version": 3,
  "name": "Tox",
  "version": "1.0",
  "description": "Share clipboard content to Discord",
  "permissions": [
    "storage",
    "clipboardRead",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16px.png",
      "48": "icons/48px.png",
      "128": "icons/128px.png"
    }
  },
  "icons": {
    "16": "icons/16px.png",
    "48": "icons/48px.png",
    "128": "icons/128px.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
} 